<%= render "landing_page/header" %>
<!-- Hero Section -->
    <header class="about-hero-section text-center text-dark" style="height: 200px; py-2">
        <div class="container">
            <h1 class="text-white about-hero-section-title">About Us</h1>
            <p class="text-white about-hero-section-text">Delicious food crafted with love</p>
        </div>
    </header>

    <!-- About Section -->
    <section class="about-section pt-2">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>Who We Are</h2>
                    <p>We are a passionate team dedicated to bringing you the freshest, most delicious meals, created from locally sourced ingredients. At our restaurant, we believe in good food and even better company.</p>
                </div>
                <div class="col-md-6">
                    <img src="https://images.unsplash.com/photo-1673006768485-3b590a2fa8fb?q=80&w=2765&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Restaurant Image" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team-section py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">Meet Our Team</h2>
            <div class="row">
                <!-- Team Member 1 -->
                <div class="col-md-4 text-center">
                    <img src="https://plus.unsplash.com/premium_photo-1681074963522-00ca908dce4e?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="rounded-circle mb-3" alt="Chef">
                    <h4>Lulia</h4>
                    <p>Head Chef</p>
                </div>
                <!-- Team Member 2 -->
                <div class="col-md-4 text-center">
                    <img src="https://plus.unsplash.com/premium_photo-1661517191467-6a0a2292e054?q=80&w=2944&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="rounded-circle mb-3" alt="Staff">
                    <h4>Jane</h4>
                    <p>Manager</p>
                </div>
                <!-- Team Member 3 -->
                <div class="col-md-4 text-center">
                    <img src="https://plus.unsplash.com/premium_photo-1661299240085-e4f34de39fd8?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="rounded-circle mb-3" alt="Staff">
                    <h4>Emily</h4>
                    <p>Pastry Chef</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="mission-section py-5">
        <div class="container text-center">
            <h2>Our Mission</h2>
            <p>Our mission is to serve the highest quality food with integrity, passion, and creativity, while supporting local farmers and delivering an unforgettable dining experience.</p>
        </div>
    </section>
